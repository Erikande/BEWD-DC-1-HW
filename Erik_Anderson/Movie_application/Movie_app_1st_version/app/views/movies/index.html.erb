<h1 style='text-align: center'><%= link_to 'RetFlix', root_path %></h1>

<%= form_tag '/', method: 'GET'  %>
<%= label_tag :q, "Find Movie" %>
<%= text_field_tag :q %>
<%= submit_tag('Search') %>


</br><%= link_to "Add a new movie", new_movie_path %>


<table cellpadding="5">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Year Released</th>
    <th>Rating</th>
    <th>Controls</th>
    <th colspan="5"></th>
  </tr>
 
<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.description %></td>
    <td><%= movie.year_released %></td>
    <td><%= movie.rating %></td>
    <td><%= link_to 'Show', movie_path(movie) %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %>
    <td><%= link_to 'Delete', movie_path(movie),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </td>
  </tr>
<% end %>
</table>
